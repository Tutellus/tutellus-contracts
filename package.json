{
  "name": "tutellus-contracts",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "standard --verbose | snazzy",
    "lint:js:fix": "standard --verbose --fix | snazzy",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage --solcoverjs ./config.solcover.js",
    "interface": "hardhat gen-interface"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aave/protocol-v2": "^1.0.1",
    "@nomiclabs/hardhat-ganache": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts": "^4.2.0",
    "@openzeppelin/contracts-upgradeable": "^4.2.0",
    "@truffle/hdwallet-provider": "^1.2.2",
    "dotenv": "^8.2.0",
    "eslint": "^8.8.0",
    "hardhat-gas-reporter": "^1.0.7",
    "hardhat-interface-generator": "0.0.6",
    "ipfs-http-client": "^53.0.1",
    "solidity-coverage": "^0.7.18"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "buidler-gas-reporter": "^0.1.4",
    "chai": "^4.3.0",
    "ethers": "^5.0.31",
    "hardhat": "^2.8.3",
    "snazzy": "^9.0.0",
    "solhint": "^3.3.2",
    "standard": "^16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run \"lint\""
    }
  },
  "standard": {
    "ignore": [
      "contracts",
      "build"
    ],
    "globals": [
      "describe",
      "web3",
      "before",
      "beforeEach",
      "it",
      "task",
      "expect",
      "import",
      "ethers",
      "artifacts"
    ]
  }
}
